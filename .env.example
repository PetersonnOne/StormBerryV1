# =============================================================================
# AI/ML PROVIDER KEYS (REQUIRED FOR AI FUNCTIONALITY)
# =============================================================================

# Groq API Key (PRIMARY for GPT-OSS 120B - ultra-fast inference)
# Get from: https://console.groq.com/
GROQ_API_KEY="put-your-api-key-here"

# OpenRouter API Key (FALLBACK for GPT-OSS 120B and Gemini 2.5 Flash Image)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY="put-your-api-key-here"

# Google Gemini API Key (for Gemini 2.5 Pro/Flash text models)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="put-your-api-key-here"

# OpenAI API Key (for GPT models - currently disabled but available)
OPENAI_API_KEY="put-your-api-key-here"

# =============================================================================
# AUTHENTICATION & DATABASE
# =============================================================================

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=put-your-api-key-here
CLERK_SECRET_KEY=put-your-api-test-key-here

# Supabase Database
NEXT_PUBLIC_SUPABASE_URL=put-your-supabase-url-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=put-your-supabase-anon-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_DEPLOYMENT_PLATFORM="other"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_REALTIME_CHAT=true
NEXT_PUBLIC_ENABLE_IMAGE_GENERATION=true

# =============================================================================
# EMAIL SERVICE
# =============================================================================

RESEND_API_KEY=put-your-resend-api-key-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

DEBUG_MODE=false
SKIP_BUILD_OPTIMIZATIONS=false
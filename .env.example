# Environment Variables Example
# Copy this file to .env.local and configure as needed

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application URL (adjust for your deployment platform)
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"

# NextAuth Secret (generate a secure random string)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (works with PostgreSQL, MySQL, SQLite)
DATABASE_URL="your-database-url"

# =============================================================================
# FEATURE FLAGS (Platform-Agnostic)
# =============================================================================

# Analytics (disabled by default for deployment compatibility)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""

# PWA Features
NEXT_PUBLIC_ENABLE_PWA=true

# Real-time Features
NEXT_PUBLIC_ENABLE_REALTIME_CHAT=true

# Image Generation
NEXT_PUBLIC_ENABLE_IMAGE_GENERATION=true

# =============================================================================
# DEPLOYMENT PLATFORM DETECTION
# =============================================================================

# Platform identifier (netlify, railway, vercel, other)
NEXT_PUBLIC_DEPLOYMENT_PLATFORM="other"

# Environment (development, staging, production)
NODE_ENV="development"

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Upstash Redis (for caching and queues)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# OpenAI API (for AI features)
# OPENAI_API_KEY=""

# Google Services
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# GITHUB_CLIENT_ID=""
# GITHUB_CLIENT_SECRET=""

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# Site verification (for search engines)
# GOOGLE_SITE_VERIFICATION=""

# Error tracking
# SENTRY_DSN=""

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug logging in development
DEBUG_MODE=false

# Skip build-time optimizations for faster development
SKIP_BUILD_OPTIMIZATIONS=false
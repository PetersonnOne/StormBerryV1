# Netlify Environment Configuration
# Copy these variables to your Netlify site settings

# Platform identification
NEXT_PUBLIC_DEPLOYMENT_PLATFORM=netlify

# Feature flags for Netlify
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_REALTIME_CHAT=true
NEXT_PUBLIC_ENABLE_IMAGE_GENERATION=true

# Netlify-specific settings
# URL is automatically set by Netlify
# NEXT_PUBLIC_APP_URL will be auto-detected

# Required for production
# NEXTAUTH_SECRET=your-secure-secret-here
# DATABASE_URL=your-database-url

# Optional integrations
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your-ga-id
# OPENAI_API_KEY=your-openai-key

# Upstash Redis (for caching and queues)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Resend (for email notifications)
RESEND_API_KEY=

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Google Calendar Integration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft Calendar Integration
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Worker Configuration
ENABLE_NOTIFICATION_WORKER=true